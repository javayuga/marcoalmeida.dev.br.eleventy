<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="/assets/main.css">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <main>
      <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
          <a href="{{ '/' | url }}" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <span class="fs-4">{{ metadata.title }}</span>
          </a>

          <ul class="nav nav-pills">
            {%- for entry in collections.all | eleventyNavigation %}
              <li class="nav-item"><a class="nav-link {% if entry.url == page.url %} active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a></li>
            {%- endfor %}
          </ul>
        </header>
      </div>

      <div class="container">
        {{ content | safe }}
      </div>

    </main>
    <footer></footer>

    <script src="/assets/main.js"></script>
    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
